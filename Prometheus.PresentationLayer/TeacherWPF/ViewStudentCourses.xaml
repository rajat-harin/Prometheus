<Window x:Class="Prometheus.PresentationLayer.TeacherWPF.ViewStudentCourses"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prometheus.PresentationLayer.TeacherWPF"
        mc:Ignorable="d"
        Title="Prometheus: Teacher" Height="700" Width="1300" WindowStartupLocation="CenterScreen" Background="BlanchedAlmond" Closed="Window_Closed">
    <Grid>
        <Button x:Name="BackButton" Content="Go Back" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="73,55,0,0" VerticalAlignment="Top" Width="92" FontSize="14" FontWeight="Bold" Click="BackButton_Click" Height="37"/>

        <Label Content="Prometheus"  Canvas.Left="10" Canvas.Top="10"  
    FontSize="24" FontFamily="Georgia" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="558,55,0,0" Width="222"/>
        <Label Content="Dear Teacher, Welcome to Students Courses Information!"   FontFamily="Georgia" FontSize="20" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="338,97,0,0" Width="609"/>
        <Label Content="Student Id:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="366,232,0,0" VerticalAlignment="Top" Width="148" RenderTransformOrigin="-0.031,0.693"/>
        <Label Content="Student Name:" FontSize="16" FontWeight="Bold" HorizontalAlignment="Left" Margin="660,232,0,0" VerticalAlignment="Top" Width="148" RenderTransformOrigin="-0.031,0.693"/>
        <TextBox x:Name="idtxt" HorizontalAlignment="Left" Height="29" Margin="464,232,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="nametxt" HorizontalAlignment="Left" Height="29" Margin="785,232,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
        <DataGrid x:Name="coursegrid" AutoGenerateColumns="True" HorizontalAlignment="Left" Height="233" Margin="273,301,0,0" VerticalAlignment="Top" Width="774"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="1088,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" TextChanged="txtUserName_TextChanged"/>

    </Grid>
</Window>
