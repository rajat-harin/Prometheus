<Window x:Class="Prometheus.PresentationLayer.StudentWPF.UpdateStudentProfile"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prometheus.PresentationLayer.StudentWPF"
        mc:Ignorable="d"
        Title="Prometheus: Student" Height="700" Width="1300" WindowStartupLocation="CenterScreen" Background="BlanchedAlmond">
    <Grid>
        <TextBlock HorizontalAlignment="Center" Margin="311,17,281.6,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="43" Width="201" FontFamily="Segoe UI Black" FontSize="22" Text="Student Profile" FontWeight="Bold"/>
        <Label Content="First Name" HorizontalAlignment="Left" Margin="420,174,0,0" VerticalAlignment="Top" FontWeight="Bold" FontSize="14"/>
        <Label Content="Last Name" HorizontalAlignment="Left" Margin="423,202,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.786,-0.31" FontWeight="Bold" FontSize="14"/>
        <Label Content="Address" HorizontalAlignment="Left" Margin="436,235,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.037,-0.607" FontWeight="Bold" FontSize="14"/>
        <Label Content="DOB" HorizontalAlignment="Left" Margin="453,263,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.037,-0.596" FontWeight="Bold" FontSize="14" Height="26"/>
        <Label Content="City" HorizontalAlignment="Left" Margin="457,289,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.397,0.994" FontWeight="Bold" FontSize="14" Height="30" Width="74"/>
        <TextBox x:Name="FName" HorizontalAlignment="Left" Height="23" Margin="561,175,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TextChanged="TextBox_TextChanged_1" IsReadOnly="True"/>
        <TextBox x:Name="LName" HorizontalAlignment="Left" Height="23" Margin="561,203,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TextChanged="TextBox_TextChanged_2" IsReadOnly="True"/>
        <TextBox x:Name="Address" HorizontalAlignment="Left" Height="23" Margin="561,235,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" RenderTransformOrigin="0.5,0.5" TextChanged="TextBox_TextChanged_3"/>
        <TextBox x:Name="City" HorizontalAlignment="Left" Height="24" Margin="561,291,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="201" TextChanged="TextBox_TextChanged_5"/>
        <Button x:Name="btnHome" Content="Back" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="54,54,0,0" VerticalAlignment="Top" Width="164" Click="btnHome_Click" Height="31" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="btnSaveData" Content="Save Changes" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="602,354,0,0" VerticalAlignment="Top" Width="116" Click="btnSaveData_Click_1" Height="42" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="37" Margin="1039,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="123" TextChanged="txtUserName_TextChanged"/>
        <Button x:Name="logout" Content="Logout" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="1039,76,0,0" VerticalAlignment="Top" Width="123" Height="35" Click="logout_Click" FontWeight="Bold" FontSize="14"/>
        <TextBox x:Name="DOB" HorizontalAlignment="Left" Height="23" Margin="561,263,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="201" IsReadOnly="True" TextChanged="DOB_TextChanged"/>

    </Grid>
</Window>
