<Window x:Class="Prometheus.PresentationLayer.AdminWPF.UserForgotPassword"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prometheus.PresentationLayer.AdminWPF"
        mc:Ignorable="d"
        Background="BlanchedAlmond"
        Title="TeacherForgotPassword" Height="450" Width="800">
    <Grid>
        <Label Content="Enter UserName" HorizontalAlignment="Left" Margin="58,207,0,0" VerticalAlignment="Top" Width="164" Height="37" FontWeight="Bold"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="33" Margin="194,207,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="241" TextChanged="TextBox_TextChanged"/>
        <Button x:Name="btnSearch" Content="Search" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="477,207,0,0" VerticalAlignment="Top" Width="94" Height="33" Click="btnSearch_Click" RenderTransformOrigin="0.698,-3.253" FontWeight="Bold" FontSize="14"/>
        <Button x:Name="btnReg" Content="Back To Homepage" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" Width="155" Click="btnReg_Click" Height="44" FontWeight="Bold"/>
        <Label Content="Search for Yourself..." HorizontalAlignment="Left" Margin="252,83,0,0" VerticalAlignment="Top" Height="49" Width="319" FontWeight="Bold" FontSize="24"/>

    </Grid>
</Window>

