<Window x:Class="Prometheus.PresentationLayer.AdminWPF.ViewCoursePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Background="BlanchedAlmond"
        xmlns:local="clr-namespace:Prometheus.PresentationLayer.AdminWPF"
        mc:Ignorable="d"
        Title="ViewCoursePage" Height="450" Width="800">
    <Grid>
        <Button Content="View All Courses" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="40,48,0,0" VerticalAlignment="Top" Width="152" Height="41" FontWeight="Bold" Click="Button_Click" FontSize="14"/>
        <TextBox x:Name="txtCName" HorizontalAlignment="Left" Height="24" Margin="284,126,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="348" TextChanged="TextBox_TextChanged"/>
        <Label Content="Search Courses By ID" HorizontalAlignment="Left" Margin="40,119,0,0" VerticalAlignment="Top" Width="205" FontWeight="Bold" FontSize="14" Height="31"/>
        <DataGrid x:Name="grid" HorizontalAlignment="Left" Height="196" Margin="40,198,0,0" VerticalAlignment="Top" Width="704" SelectionChanged="DataGrid_SelectionChanged"/>
        <Button Content="Search" Template="{StaticResource buttonTemplate}" HorizontalAlignment="Left" Margin="669,130,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1" FontWeight="Bold" FontSize="14"/>

    </Grid>
</Window>